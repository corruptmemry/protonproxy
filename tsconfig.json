{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@plugins/*": ["plugins/*"]
    }
  },
  "include": ["src/**/*"]
}
